<Window x:Class="TurnInTwentySixth.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TurnInTwentySixth"
        mc:Ignorable="d"
        Title="Media Player" Height="350" Width="525">
    <Grid>
        <ToolBarTray Height="45" VerticalAlignment="Top" Background="Turquoise">
            <ToolBar Background="Turquoise">
                <Button Name="load" Click="Load_Click" Height="43">
                    <Image Source="icons/load.png" Stretch="Fill"/>
                </Button>
                <Separator />
                <Button Name="play" Click="BtnPlay_Click" Height="43">
                    <Image Source="icons/play.png" Stretch="Fill"/>
                </Button>
                <Button Name="pause" Click="BtnPause_Click" Height="38">
                    <Image Source="icons/pause.png" Stretch="Fill"/>
                </Button>
                <Button Name="stop" Click="BtnStop_Click" Height="38">
                    <Image Source="icons/stop.png" Stretch="Fill"/>
                </Button>
            </ToolBar>
        </ToolBarTray>
        <MediaElement Name="video" LoadedBehavior="Manual" Margin="0,45,0,0"/>
    </Grid>
</Window>
